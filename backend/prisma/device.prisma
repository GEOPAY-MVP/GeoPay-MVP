enum DeviceStatus {
  active
  inactive
  suspended
  blocked
}

model Device {
  device_id            String   @id @default(uuid())
  os_type              String?
  device_fingerprint   String   @unique
  device_name          String?
  status               DeviceStatus @default(active)
  is_biometric_enabled Boolean  @default(false)
  biometric_public_key String?
  fcm_token            String?
  userDevices  UserDevice[]

  @@map("device")
}
